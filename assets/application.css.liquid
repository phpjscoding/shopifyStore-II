
:root{
 --header-h:4rem;
};

*,
*::before,
*::after{
    box-sizing: border-box;
    margin:0;
    padding: 0;

}

body {
    font-family: 'Roboto', sans-serif;
    font-size   : 14px;
    line-height : 21px;
    color       : #444444;
    font-weight : 300;
    background: #f2f1f1;
    }

